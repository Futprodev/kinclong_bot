<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

        <!-- BASE FOOTPRINT -->]
    <link name="base_footprint"></link>

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint> 

    <!-- BASE LINK -->

    <link name="base_link">
    <pose>0 0 0.1 0 0 0</pose>
        <visual>
            <origin xyz="0 0 0.0325"/>
            <geometry>
                <cylinder radius="0.2" length="0.1"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.0325"/>
            <geometry>
                <cylinder radius="0.2" length="0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.5" length="0.1" radius="0.2">
            <origin xyz="0 0 0.0325" rpy="0 0 0"/>
        </xacro:inertial_cylinder>

        <visual name="front_caster_wheel_visual">
            <origin xyz="0.15 0 -0.0025" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
            <material name="black"/>
        </visual>
        
        <collision name="front_caster_wheel_collision">
            <origin xyz="0.15 0 -0.0025" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
        </collision>

        <visual name="rear_caster_wheel_visual">
            <origin xyz="-0.15 0 -0.0025" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
            <material name="black"/>
        </visual>
        
        <collision name="rear_caster_wheel_collision">
            <origin xyz="-0.15 0 -0.0025" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
        </collision>
    </link>
    
    <!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0.05 0.09 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
        <limit effort="100" velocity="20.0"/>
        <dynamics damping="2.0" friction="3.0"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0325" length="0.025"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0325" length="0.025"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.025" radius="0.0325">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- RIGHT WHEEL LINK -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0.05 -0.09 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
        <limit effort="100" velocity="20.0"/>
        <dynamics damping="2.0" friction="3.0"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0325" length="0.025"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0325" length="0.025"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.025" radius="0.0325">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    
</robot>